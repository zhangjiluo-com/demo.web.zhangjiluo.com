    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@j-l/prettier-config": "^1.0.2",
    "rollup-plugin-minify-html-literals-v3": "^1.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.1"
  },
  "peerDependencies": {
    "vue": "3"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "prettier": "@j-l/prettier-config"
